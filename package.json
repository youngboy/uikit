{
  "name": "@weimi/ui",
  "version": "1.0.0",
  "author": "youngboy",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "sideEffects": false,
  "description": "React styled-components built with theming",
  "repository": {
    "type": "git",
    "url": "https://github.com/youngboy/uikit"
  },
  "bugs": {
    "url": "https://github.com/youngboy/uikit/issues"
  },
  "keywords": [
    "components",
    "react",
    "react-component",
    "ui",
    "design-system",
    "styled-system",
    "styled-components",
    "presentational",
    "stateless",
    "functional"
  ],
  "homepage": "https://weimi-ui.netlify.com",
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rm -rf dist && mkdir dist",
    "build": "babel src -d dist",
    "test": "jest",
    "mdx": "mdx-go docs",
    "docs": "mdx-go build docs"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-react-docgen": "^2.0.0",
    "babel-plugin-styled-components": "^1.7.1",
    "eslint": "^5.5.0",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.5.0",
    "jest-styled-components": "^6.1.1",
    "mdx-go": "^1.1.6"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "react": "^16.5.0",
    "react-docgen": "^2.21.0",
    "react-dom": "^16.5.0",
    "react-json-view": "^1.19.1",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.5.0",
    "styled-components": "^4.0.0-beta.1",
    "is-absolute-url": "^2.1.0",
    "html-tags": "^2.0.0",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.2",
    "styled-system": "^3.0.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/test/**/*.js"
    ],
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
